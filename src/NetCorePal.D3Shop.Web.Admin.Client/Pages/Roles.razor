@page "/admin/roles"
@attribute [MustHaveAdminPermission(PermissionDefinitions.RoleView)]

<Table DataSource="_roleList">
    <TitleTemplate>
        <GridRow>
            <GridCol Span="4">
                <Title Level="3">角色列表</Title>
            </GridCol>
            <GridCol Span="8" Offset="12">
                <Search Placeholder="Search Name" @bind-Value="_searchString" OnSearch="() => { }"/>
            </GridCol>
        </GridRow>
    </TitleTemplate>
    <ColumnDefinitions>
        <PropertyColumn Property="c => c.Name"/>
        <PropertyColumn Property="c => c.Description"/>
        <ActionColumn Title="Action">
            <Space Size=@("middle")>
                <SpaceItem>
                    <a>Invite @context.Name</a>
                </SpaceItem>
                <SpaceItem>
                    <a>Delete</a>
                </SpaceItem>
            </Space>
        </ActionColumn>
    </ColumnDefinitions>
</Table>